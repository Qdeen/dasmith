<% content_for :title do %><%= @article.title%> by Danny Smith<% end %>

<%= erb :'partials/_page_header' %>

<div class="container">
	<article class="article hentry">
    <h1><a href="/writing/<%= @article.slug %>"><%= @article.title %></a></h1>
		<div class="article-body entry-content">
			<%= @article.body %>
		</div>
		<time class="published hidden" datetime="<%= @article.publish_date.to_s %>">
	</article>
  <div id="disqus_thread"></div>
  <script type="text/javascript">
      /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
      var disqus_shortname = 'dannyis'; // required: replace example with your forum shortname
      var disqus_identifier = '<%= @article.post_id %>';
      var disqus_title = '<%= @article.title %>';

      /* * * DON'T EDIT BELOW THIS LINE * * */
      (function() {
          var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
          dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
          (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
      })();
