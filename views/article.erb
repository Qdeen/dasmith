<% content_for :title do %><%= @article.title%> by Danny Smith<% end %>
<header class="page-header">
	<h1><a href="/" class="entry-title"><%= @article.title %></a></h1>
	<p class="byline author vcard">by <a class="fn" href="/about">Danny Smith</a></p>
</header>
<div class="container">
	<article class="article hentry">
		<div class="article-body entry-content">
			<%= @article.body %>
		</div>
		<time class="published hidden" datetime="<%= @article.publish_date.to_s %>">
	</article>
	<nav class="pagination clearfix">
		<a class="center" href="/writing/articles">More Articles</a>
	</nav>
</div>
