<header class="page-header">
	<h1><a href="/">Articles</a></h1>
	<p>by <a href="/about">Danny Smith</a></p>
</header>
<div class="container">
	<% @articles.each do |article| %>
	<article class="article">
		<h1><a href="/writing/<%= article.slug %>"><%= article.title %></a></h1>
		<div class="article-body">
			<%= article.body %>
		</div>
	</article>
	<% end %>

	<%= erb 'partials/_pagination' %>
</div>
