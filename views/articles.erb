<header class="page-header">
	<h1><a href="/">Articles</a></h1>
	<p class="byline author vcard">by <a class="fn" href="/about">Danny Smith</a></p>
</header>
<div class="container">
	<% @articles.each do |article| %>
	<article class="article hentry">
		<h1><a href="/writing/<%= article.slug %>" class="entry-title"><%= article.title %></a></h1>
		<div class="article-body entry-content">
			<%= article.body %>
		</div>
		<time class="published hidden" datetime="<%= @article.publish_date.to_s %>">
	</article>
	<% end %>

	<%= erb 'partials/_pagination' %>
</div>
